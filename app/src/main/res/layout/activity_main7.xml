<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/setpwsdimg"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/_5248_mailbox" />

    <TextView
        android:id="@+id/setpwsd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/setpwsdimg"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="Set Password"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edit_username"
        android:layout_below="@id/setpwsd"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:hint="User Name :">

      <com.google.android.material.textfield.TextInputEditText
          android:drawablePadding="15dp"
          android:drawableTint="@color/teal_200"
          android:inputType="textPersonName"
          android:drawableStart="@drawable/ic_baseline_person_24"
          android:layout_width="300dp"
          android:layout_height="60dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pwsd"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@id/edit_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="New Password :">

      <com.google.android.material.textfield.TextInputEditText
          android:layout_width="300dp"
          android:layout_height="60dp"
          android:drawableStart="@drawable/ic_baseline_lock_open_24"
          android:drawablePadding="15dp"
          android:drawableTint="@color/teal_200"
          android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Confirmpwsd"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@id/pwsd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="Confirm Password :">

      <com.google.android.material.textfield.TextInputEditText
          android:layout_width="300dp"
          android:layout_height="60dp"
          android:drawableStart="@drawable/ic_baseline_lock_24"
          android:drawablePadding="15dp"
          android:drawableTint="@color/teal_200"
          android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/proceedbtn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/Confirmpwsd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Confirm" />

  </RelativeLayout>
</ScrollView>
